<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for $10/month and get access to the community and contact information!</p>
      </div> 
            <div class="well">
              <h2 class="text-center">Sign Up</h2>
                <%= render "pro_form" %>
            </div>
        <% else %>
            <h1>Basic Account</h1>
            <p>Sign up for free and get basic access to the community.</p>
              <div class="well">
                <%= render "basic_form" %>
              </div>
        <% end %>
          <%= render "devise/shared/links" %>
    </div>
  </div>
</div>